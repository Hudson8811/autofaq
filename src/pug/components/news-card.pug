mixin news-card(img, brand, day, month, year, text, className)
	a.news-card(class= className, href='#', target='_blank')
		figure
			if img
				.news-card__bg
					img(src='images/news-card/' + img + '.jpg', srcset='images/news-card/' + img + '@2x.jpg 2x', alt='')
			else
				.news-card__bg
			.news-card__content
				.news-card__top
					if day
						.news-card__day!= day
					if brand
						.news-card__brand
							img(src='images/publish/' + brand + '.png', srcset='images/publish/' + brand + '@2x.png 2x', alt='')
					div
						.news-card__month!= month
						.news-card__year!= year
				.news-card__text!= text
