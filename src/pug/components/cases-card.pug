mixin cases-card(title, img, text, className, author)
	.cases-card(class= className)
		.cases-card__top
			.cases-card__title!= title
			if img
				.cases-card__image
					img(src='images/cases-card/' + img + '.png', srcset='images/cases-card/' + img + '@2x.png 2x', alt='')
			if author
				.cases-card__author
					.cases-card__author-image
						img('images/clients/1.jpg', srcset='images/clients/1@2x.jpg 2x', alt='')
					.cases-card__author-name
						p Михаил Осеевский
						p CEO
		.cases-card__text!= text